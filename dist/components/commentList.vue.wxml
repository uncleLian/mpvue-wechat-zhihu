      <view class="_div data-v-7f4846b5 nothing" wx:if="{{bottomLoading === 'nothing'}}">刷完了，休息一下吧</view>
      <view class="_div data-v-7f4846b5 error" wx:if="{{bottomLoading === 'error'}}">出错了，刷新试试</view>
