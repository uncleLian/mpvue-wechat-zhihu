          <image class="_img data-v-7f4846b5 item-avatar" src="{{item.avatar}}"></image>
          <view class="_div data-v-7f4846b5 item-author">{{item.author}}</view>
        </view>
        <view class="_div data-v-7f4846b5 item-time">{{item.time}}</view>
